<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="ru.itmo.client.controller.StudyGroupEditDialogCont">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <spacing>10</spacing>

    <Label text="Edit Study Group" styleClass="main-title"/>

    <GridPane hgap="10" vgap="10">
        <children>
            <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Coordinates:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="coordinatesField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Students Count:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="studentsCountField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Expelled Students:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="expelledStudentsField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Should be Expelled:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextField fx:id="shouldBeExpelledField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <Label text="Form of Education:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <ComboBox fx:id="formOfEducationField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

            <Label text="Admin Name:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
            <TextField fx:id="adminNameField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

            <Label text="Passport ID:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
            <TextField fx:id="passportIDField" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

            <Label text="Hair Color:" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
            <ComboBox fx:id="hairColorField" GridPane.rowIndex="8" GridPane.columnIndex="1"/>

            <Label text="Location X:" GridPane.rowIndex="9" GridPane.columnIndex="0"/>
            <TextField fx:id="locationXField" GridPane.rowIndex="9" GridPane.columnIndex="1"/>

            <Label text="Location Y:" GridPane.rowIndex="10" GridPane.columnIndex="0"/>
            <TextField fx:id="locationYField" GridPane.rowIndex="10" GridPane.columnIndex="1"/>

            <Label text="Location Name:" GridPane.rowIndex="11" GridPane.columnIndex="0"/>
            <TextField fx:id="locationNameField" GridPane.rowIndex="11" GridPane.columnIndex="1"/>

        </children>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="OK" onAction="#handleOk"/>
        <Button text="Cancel" onAction="#handleCancel"/>
    </HBox>
</VBox>
